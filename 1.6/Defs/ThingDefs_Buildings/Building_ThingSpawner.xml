<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <DesignatorDropdownGroupDef>
    <defName>Rhy_ThingSpawner_Dropdown</defName>
  </DesignatorDropdownGroupDef>

  <!-- Abstract -->

  <ThingDef Name="Rhy_ThingSpawnerBase" ParentName="AdaptiveStorageBase" Abstract="True">
    <thingClass>Rhynia.Overpower.Building_ThingSpawner</thingClass>
    <label>thing spawner</label>
    <description>Can spawn specified items in the container.</description>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <texPath>RhyniaOverpower/Things/Building/Misc/Barrel</texPath>
      <color>(200, 200, 200)</color>
      <colorTwo>(178, 255, 255)</colorTwo>
    </graphicData>
    <size>(1, 1)</size>
    <defaultPlacingRot>North</defaultPlacingRot>
    <rotatable>False</rotatable>
    <inspectorTabs Inherit="False" />
    <building>
      <maxItemsInCell>1</maxItemsInCell>
      <defaultStorageSettings>
        <priority>Critical</priority>
        <filter />
      </defaultStorageSettings>
    </building>
    <costList>
      <Steel>100</Steel>
      <Silver>100</Silver>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <tickerType>Rare</tickerType>
    <statBases>
      <MaxHitPoints>160</MaxHitPoints>
      <WorkToBuild>1200</WorkToBuild>
      <Mass>20</Mass>
    </statBases>
    <modExtensions>
      <li Class="AdaptiveStorage.Extension">
        <temperature>
          <coolingOffset>400</coolingOffset>
          <coolingMin>-10</coolingMin>
          <requiresPower>False</requiresPower>
          <requiresSwitchOn>False</requiresSwitchOn>
          <requiresFuel>False</requiresFuel>
        </temperature>
      </li>
    </modExtensions>
    <designationCategory>Rhy_MainCategory</designationCategory>
    <designatorDropdown>Rhy_ThingSpawner_Dropdown</designatorDropdown>
  </ThingDef>

  <AdaptiveStorage.GraphicsDef Name="Rhy_ThingSpawnerGraphicBase" Abstract="True">
    <showContainedItems>False</showContainedItems>
    <graphics>
      <li>
        <graphicData>
          <graphicClass>Graphic_Single</graphicClass>
          <shaderType>CutoutComplex</shaderType>
          <texPath>RhyniaOverpower/Things/Building/Misc/Barrel</texPath>
        </graphicData>
        <colorOneSource>ColorOne</colorOneSource>
        <colorTwoSource>ColorTwo</colorTwoSource>
      </li>
    </graphics>
  </AdaptiveStorage.GraphicsDef>

  <!-- Content -->

  <ThingDef ParentName="Rhy_ThingSpawnerBase">
    <defName>Rhy_ThingSpawner_Medical</defName>
    <modExtensions>
      <li Class="Rhynia.Overpower.DefModExt_ThingSpawner">
        <name>medical</name>
        <category>Medicine</category>
      </li>
    </modExtensions>
  </ThingDef>

  <AdaptiveStorage.GraphicsDef ParentName="Rhy_ThingSpawnerGraphicBase">
    <defName>Rhy_ThingSpawner_Medical_Graphics</defName>
    <targetDef>Rhy_ThingSpawner_Medical</targetDef>
  </AdaptiveStorage.GraphicsDef>

  <ThingDef ParentName="Rhy_ThingSpawnerBase">
    <defName>Rhy_ThingSpawner_Material</defName>
    <modExtensions>
      <li Class="Rhynia.Overpower.DefModExt_ThingSpawner">
        <name>material</name>
        <category>ResourcesRaw</category>
        <spawnableDefs>
          <li>Rhy_ArchotechAssembly</li>
        </spawnableDefs>
        <defaultDef>Rhy_ArchotechAssembly</defaultDef>
      </li>
    </modExtensions>
  </ThingDef>

  <AdaptiveStorage.GraphicsDef ParentName="Rhy_ThingSpawnerGraphicBase">
    <defName>Rhy_ThingSpawner_Material_Graphics</defName>
    <targetDef>Rhy_ThingSpawner_Material</targetDef>
  </AdaptiveStorage.GraphicsDef>

</Defs>