        <linkableFacilities>
          <li>Electroharvester</li>
          <li>ElectricInhibitor</li>
          <li>ShardInhibitor</li>
          <li>BioferriteHarvester</li>
        </linkableFacilities>
      </li>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Void</li>
        </focusTypes>
        <offsets>
