<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <ThingDef Name="Rhy_WealthConvertBase" ParentName="AdaptiveStorageMinifiableBase" Abstract="True">
    <thingClass>Rhynia.Overpower.Building_WealthConvert</thingClass>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>RhyniaOverpower/Things/Building/Misc/Crate2</texPath>
      <damageData>
        <enabled>False</enabled>
      </damageData>
    </graphicData>
    <size>(1, 1)</size>
    <defaultPlacingRot>North</defaultPlacingRot>
    <rotatable>False</rotatable>
    <building>
      <maxItemsInCell>16</maxItemsInCell>
    </building>
    <costList>
      <Steel>160</Steel>
      <Silver>120</Silver>
    </costList>
    <tickerType>Rare</tickerType>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>100</WorkToBuild>
      <Mass>8</Mass>
    </statBases>
    <designationCategory>Rhy_MainCategory</designationCategory>
  </ThingDef>

  <ThingDef ParentName="Rhy_WealthConvertBase">
    <defName>Rhy_WealthConvert</defName>
    <label>财富转化器</label>
    <description>可以将容器内物品转化为白银或黄金。</description>
    <building>
      <fixedStorageSettings>
        <priority>Critical</priority>
        <filter>
          <categories>
            <li>Root</li>
          </categories>
          <disallowedThingDefs>
            <li>Silver</li>
            <li>Gold</li>
          </disallowedThingDefs>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Critical</priority>
        <filter>
          <categories>
            <li>BodyPartsNatural</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
  </ThingDef>

  <AdaptiveStorage.GraphicsDef>
    <defName>Rhy_WealthConvertGraphics</defName>
    <targetDef>Rhy_WealthConvert</targetDef>
    <showContainedItems>False</showContainedItems>
    <graphics>
      <li>
        <graphicData>
          <graphicClass>Graphic_Single</graphicClass>
          <texPath>RhyniaOverpower/Things/Building/Misc/Crate2</texPath>
        </graphicData>
      </li>
    </graphics>
  </AdaptiveStorage.GraphicsDef>
</Defs>