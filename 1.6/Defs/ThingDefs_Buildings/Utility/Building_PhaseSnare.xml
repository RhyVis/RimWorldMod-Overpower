<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <DesignatorDropdownGroupDef>
    <defName>Rhy_PhaseSnare_Dropdown</defName>
  </DesignatorDropdownGroupDef>

  <ThingDef ParentName="Rhy_FloorStructureBase">
    <defName>Rhy_PhaseSnare_Core</defName>
    <thingClass>Rhynia.Overpower.Building_PhaseSnareCore</thingClass>
    <label>phase snare core</label>
    <description>Teleport enemies captured by the phase snare beacon to this location, stunning them for about 5 seconds.</description>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>RhyniaOverpower/Things/Building/Security/PhaseSnare_Core</texPath>
    </graphicData>
    <building>
      <expandHomeArea>False</expandHomeArea>
    </building>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>0</WorkToBuild>
      <Flammability>0</Flammability>
      <Mass>0</Mass>
    </statBases>
    <useHitPoints>False</useHitPoints>
    <size>(1, 1)</size>
    <tickerType>Normal</tickerType>
    <designatorDropdown>Rhy_PhaseSnare_Dropdown</designatorDropdown>
    <costList Inherit="False" />
    <placeWorkers>
      <li>Rhynia.Overpower.PlaceWorker_PhaseSnareCore</li>
    </placeWorkers>
  </ThingDef>

  <ThingDef ParentName="Rhy_FurnBase">
    <defName>Rhy_PhaseSnare_Beacon</defName>
    <thingClass>Rhynia.Overpower.Building_PhaseSnareBeacon</thingClass>
    <label>phase snare beacon</label>
    <description>This device is used to provide location information to the core. The map where it is located will be able to use the phase teleportation function.</description>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <texPath>RhyniaOverpower/Things/Building/Security/PhaseSnare_Beacon</texPath>
    </graphicData>
    <building>
      <expandHomeArea>False</expandHomeArea>
    </building>
    <fillPercent>0</fillPercent>
    <rotatable>False</rotatable>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>0</WorkToBuild>
      <Flammability>0</Flammability>
      <Mass>0</Mass>
    </statBases>
    <useHitPoints>False</useHitPoints>
    <size>(1, 1)</size>
    <tickerType>Normal</tickerType>
    <costList Inherit="False" />
    <minifiedDef Inherit="False" />
    <thingCategories Inherit="False" />
    <designatorDropdown>Rhy_PhaseSnare_Dropdown</designatorDropdown>
    <placeWorkers>
      <li>Rhynia.Overpower.PlaceWorker_PhaseSnareBeacon</li>
    </placeWorkers>
  </ThingDef>
</Defs>