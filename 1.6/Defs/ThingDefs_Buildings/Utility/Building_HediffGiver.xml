  <ThingDef Name="Rhy_HediffGiverBase" ParentName="Rhy_FurnBase" Abstract="True">
    <thingClass>Rhynia.Overpower.Building_HediffGiver</thingClass>
    <label>hediff giver</label>
    <description>The machine causes X in nearby pawns.</description>
    <blockWind>False</blockWind>
    <blockLight>False</blockLight>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>RhyniaOverpower/Things/Building/Misc/HediffGiver</texPath>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <building>
      <expandHomeArea>False</expandHomeArea>
    </building>
    <size>(1, 1)</size>
    <passability>Standable</passability>
    <fillPercent>0</fillPercent>
    <rotatable>False</rotatable>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>0</WorkToBuild>
      <Flammability>0</Flammability>
      <Mass>10</Mass>
    </statBases>
    <size>(1, 1)</size>
    <useHitPoints>False</useHitPoints>
    <tickerType>Normal</tickerType>
    <costList Inherit="False" />
    <thingCategories Inherit="False" />
    <minifiedDef IsNull="True" />
  </ThingDef>

  <ThingDef Name="Rhy_HediffGiverBasePositive" ParentName="Rhy_HediffGiverBase" Abstract="True">
