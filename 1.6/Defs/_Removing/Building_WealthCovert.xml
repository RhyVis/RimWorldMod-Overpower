<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <ThingDef Name="Rhy_WealthConvertBase" ParentName="AdaptiveStorageMinifiableBase" Abstract="True" MayRequire="adaptive.storage.framework">
    <thingClass>Rhynia.Overpower.Building_WealthConvert</thingClass>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <texPath>RhyniaOverpower/Things/Building/Misc/Barrel</texPath>
      <color>(200, 200, 200)</color>
      <colorTwo>(216, 191, 216)</colorTwo>
    </graphicData>
    <size>(1, 1)</size>
    <defaultPlacingRot>North</defaultPlacingRot>
    <rotatable>False</rotatable>
    <tickerType>Rare</tickerType>
    <building>
      <maxItemsInCell>32</maxItemsInCell>
    </building>
    <costList>
      <Steel>160</Steel>
      <Silver>120</Silver>
    </costList>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>100</WorkToBuild>
      <Mass>8</Mass>
    </statBases>
    <designationCategory IsNull="True" />
  </ThingDef>

  <ThingDef ParentName="Rhy_WealthConvertBase" MayRequire="adaptive.storage.framework">
    <defName>Rhy_WealthConvert</defName>
    <label>wealth converter</label>
    <description>Can convert items in the container into silver or gold.</description>
    <building>
      <fixedStorageSettings>
        <priority>Critical</priority>
        <filter>
          <categories>
            <li>Root</li>
          </categories>
          <disallowedThingDefs>
            <li>Silver</li>
            <li>Gold</li>
          </disallowedThingDefs>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Critical</priority>
        <filter />
      </defaultStorageSettings>
    </building>
  </ThingDef>

  <AdaptiveStorage.GraphicsDef MayRequire="adaptive.storage.framework">
    <defName>Rhy_WealthConvertGraphics</defName>
    <targetDef>Rhy_WealthConvert</targetDef>
    <showContainedItems>False</showContainedItems>
    <graphics>
      <li>
        <graphicData>
          <graphicClass>Graphic_Single</graphicClass>
          <shaderType>CutoutComplex</shaderType>
          <texPath>RhyniaOverpower/Things/Building/Misc/Barrel</texPath>
        </graphicData>
        <colorOneSource>ColorOne</colorOneSource>
        <colorTwoSource>ColorTwo</colorTwoSource>
      </li>
    </graphics>
  </AdaptiveStorage.GraphicsDef>

</Defs>